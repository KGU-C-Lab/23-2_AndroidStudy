<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_my_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/item_my_tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/item_my_img"
        app:layout_constraintStart_toEndOf="@id/item_my_img"
        app:layout_constraintTop_toTopOf="@id/item_my_img"
        android:layout_margin="5dp"
        />
<!--    <ImageView-->
<!--        android:id="@+id/item_my_cakeImg"-->
<!--        android:layout_width="20dp"-->
<!--        android:layout_height="20dp"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/item_my_img"-->
<!--        app:layout_constraintStart_toEndOf="@id/item_my_tvName"-->
<!--        app:layout_constraintTop_toTopOf="@id/item_my_img"-->
<!--        android:layout_margin="5dp"-->
<!--        android:visibility="gone"-->
<!--        />-->
    <TextView
        android:id="@+id/item_my_tvBirthDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(생일)"
        android:textColor="#800080"
        app:layout_constraintBottom_toBottomOf="@id/item_my_img"
        app:layout_constraintStart_toEndOf="@id/item_my_tvName"
        app:layout_constraintTop_toTopOf="@id/item_my_img"
        android:layout_margin="5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/item_my_self_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한줄소개"
        app:layout_constraintBottom_toBottomOf="@id/item_my_img"
        app:layout_constraintStart_toEndOf="@id/item_my_tvBirthDay"
        app:layout_constraintTop_toTopOf="@id/item_my_img"
        android:layout_margin="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>