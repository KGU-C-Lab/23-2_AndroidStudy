<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="30dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/activity_main_etNum1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:ems="10"
        android:inputType="number"
        android:hint="첫번째 숫자를 입력하세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_main_etNum2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="500dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:inputType="number"
        android:hint="두번째 숫자를 입력하세요"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/activity_main_etNum1"
        app:layout_constraintTop_toBottomOf="@id/activity_main_etNum1" />


    <Button
        android:id="@+id/activity_main_btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_etNum2"/>

    <Button
        android:id="@+id/activity_main_btnMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@id/activity_main_btnAdd"
        app:layout_constraintStart_toStartOf="@id/activity_main_btnAdd"
        app:layout_constraintTop_toBottomOf="@id/activity_main_btnAdd" />

    <Button
        android:id="@+id/activity_main_btnMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="*"
        app:layout_constraintEnd_toEndOf="@id/activity_main_btnMin"
        app:layout_constraintStart_toStartOf="@id/activity_main_btnMin"
        app:layout_constraintTop_toBottomOf="@id/activity_main_btnMin" />

    <Button
        android:id="@+id/activity_main_btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="@id/activity_main_btnMul"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/activity_main_btnMul"
        app:layout_constraintTop_toBottomOf="@id/activity_main_btnMul" />

    <TextView
        android:id="@+id/activity_main_tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_btnDiv" />


</androidx.constraintlayout.widget.ConstraintLayout>